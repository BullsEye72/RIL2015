<%%= simple_form_for(@<%= singular_table_name %>,  wrapper: :horizontal_form) do |f| %>
  <%%= f.error_notification %>
  <div class="form-horizontal">
    <div class="form-inputs">
      <%% disabled = (action == :show) ? true : false %>
    <%- attributes.each do |attribute| -%>
      <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>, input_html: { disabled: disabled } %>
    <%- end -%>
    </div>

    <div class="form-actions">
      <%% if action == :new %>
          <%%= f.submit 'Créer' %>
      <%% end %>
      <%% if action == :edit %>
          <%%= f.submit 'Mettre à jour' %>
      <%% end %>
      <%%= link_to('Retour', <%= plural_table_name %>_path, class: 'btn btn-default pull-right') %>
    </div>
  </div>
<%% end %>