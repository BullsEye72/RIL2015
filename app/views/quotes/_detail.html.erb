<div class="panel panel-default">
  <div class="panel-heading">
    Détail du devis
  </div>
  <div class="panel-body">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th><%= 'Nom' %></th>
          <th><%= 'Référence' %></th>
          <th><%= 'Description' %></th>
          <th><%= 'Prix HT' %></th>
          <th><%= 'Prix TTC' %></th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @modules.each_with_index do |m,i| %>
          <tr class="info">
            <td><%= "#{i+1} | #{m.name}" %></td>
            <td></td>
            <td><%= truncate(m.description) %></td>
            <td><%= number_to_currency(m.module_price, locale: :fr) %></td>
            <td><%= number_to_currency(m.module_price_w_vat, locale: :fr) %></td>
            <td class="text-right">
              <%= link_to(
                raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'), m)
              %>
            </td>
          </tr>
          
          <% m.articles.each do |a| %>
            <tr>
                <td><%= a.name %></td>
                <td><%= a.reference %></td>
                <td><%= truncate(a.description) %></td>
                <td><%= number_to_currency(a.lowest_price, locale: :fr) %></td>
                <td><%= number_to_currency(a.lowest_price_w_vat, locale: :fr) %></td>
                <td class="text-right">
                  <%= link_to(
                    raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'), a)
                  %>
                </td>
            </tr>
          <% end %>
        <% end %>
          <tfoot>
              <td></td>
              <td></td>
              <td>Total</td>
              <td><%= number_to_currency(@product.product_price, locale: :fr) %></td>
              <td><%= number_to_currency(@product.product_price_w_vat, locale: :fr) %></td>
              <td></td>
          </tfoot>
      </tbody>
    </table>
  </div>
</div>
