<%= simple_form_for(@payment,  wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>
  <div class="form-horizontal">
    <div class="form-inputs">
      <% disabled = (action == :show) ? true : false %>
      <%= f.association :quote, input_html: { disabled: disabled } %>
      <%= f.input :payment, input_html: { disabled: disabled } %>
      <%= f.association(
          :payment_state,
              input_html: { disabled: disabled },
              label_method: ->(obj) do
                "#{obj.name} : #{number_to_percentage(obj.value*100, precision: 0)}"
              end
          )
      %>
    </div>

    <div class="form-actions">
      <% if action == :new %>
          <%= f.submit 'Créer' %>
      <% end %>
      <% if action == :edit %>
          <%= f.submit 'Mettre à jour' %>
      <% end %>
      <%= link_to('Annuler', :back, class: 'btn btn-default pull-right') %>
    </div>
  </div>
<% end %>