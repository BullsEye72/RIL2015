<% provide(:title, 'Utilisateur') %>
<% provide(:subtitle, 'Edition') %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Edition du compte utilisateur</h2>
  </div>
  <div class="panel-body">
    <%= simple_form_for(
          resource,
          as: resource_name,
          url: user_registration_path(resource_name),
          html: { method: :put },
          wrapper: :horizontal_form
      ) do |f| %>
        <%= f.error_notification %>

        <div class="form-horizontal">

          <div class="form-inputs">
            <%= f.input :firstname, label: 'Prénom' %>
            <%= f.input :lastname, label: 'Nom' %>
            <%= f.input :adress, label: 'Adresse' %>
            <%= f.input :phone_number, label: 'Téléphone' %>
            <%= f.input :password, label: 'Mot de passe', autocomplete: 'off', hint: 'Laissez vide si vous ne voulez pas le changer' %>
            <%= f.input :password_confirmation, label: 'Confirmation du mot de passe' %>
            <%= f.input :current_password, label: 'Mot de passe actuel', hint: 'Nous avons besoin de votre mot de passe pour confirmer le changement', required: true %>
          </div>
          <%= f.input :email, required: true, autofocus: true %>

          <div class="form-actions">
            <%= f.button :submit, 'Mettre à jour' %>
            <%= link_to 'Annuler', :back, class: 'btn btn-default' %>
          </div>

        </div>

    <% end %>

  </div>
</div>

