<% provide(:title, t('article')) %>
<% provide(:subtitle, 'Création') %>


<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="Effacer">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Êtes vous certain ?</h4>
      </div>
      <div class="modal-body">
        Êtes vous certain d'effacer cet élément ?
      </div>
      <div class="modal-footer">
        <%= link_to 'Effacer',  @article,  method: :delete, class: 'btn btn-danger' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <%= render 'form', action: :show %>
    <a href="<%= edit_article_path %>" class="btn btn-primary">
      <span class="glyphicon glyphicon-edit" aria-hidden="true"> </span>
      Editer
    </a>
    <button class="btn-danger" data-toggle="modal" data-target="#delete">
      <span class="glyphicon glyphicon-remove" aria-hidden="true"> </span>
      Supprimer
    </button>
  </div>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
    Articles correspondants
  </div>
  <div class="panel-body">
    <table>
      <thead>
        <tr>
              <th><%= t('name').titleize %></th>
              <th><%= 'Reference' %></th>
              <th><%= t('price').titleize %></th>
              <th></th>
        </tr>
      </thead>

      <tbody>
        <% @article_suppliers.each do |ac| %>
          <tr>
                <td><%= ac.supplier.name %></td>
                <td><%= ac.supplier_reference %></td>
                <td><%= ac.price %></td>
                <td class="text-right">
              <%= link_to(
                raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'),
                ac.supplier
              )
              %>
              |
              <%= link_to(
                raw('<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>'),
                edit_supplier_path(ac.supplier)
              )
              %>
              |
              <%= link_to(
                raw('<span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>'),
                ac.supplier,
                method: :delete, data: { confirm: 'Êtes vous certain ?' }
              ) %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
