<% provide(:title, t('Article')) %>
<% provide(:subtitle, 'Liste') %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title"><%= t 'Listing Articles' %></h2>
  </div>
  <div class="panel-body">
    <table>
      <thead>
        <tr>
              <th><%= t 'Name' %></th>
              <th><%= t 'Article group' %></th>
              <th><%= t 'Value added tax' %></th>
              <th><%= t 'Reference' %></th>
              <th><%= t 'Description' %></th>
              <th></th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |article| %>
          <tr>
                <td><%= t article.name %></td>
                <td><%= t article.article_group %></td>
                <td><%= t article.value_added_tax %></td>
                <td><%= t article.reference %></td>
                <td><%= t article.description %></td>
                <td class="text-right">
              <%= link_to(
                raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'),
                article
              )
              %>
              |
              <%= link_to(
                raw('<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>'),
                edit_article_path(article)
              )
              %>
              |
              <%= link_to(
                raw('<span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>'),
                article,
                method: :delete, data: { confirm: 'ÃŠtes vous certain ?' }
              ) %>

            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to "Nouveau #{t('Article')}", new_article_path, class: 'btn btn-default' %>
  </div>
</div>