<% provide(:title, t('supplier')) %>
<% provide(:subtitle, 'Affichage') %>


<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="Effacer">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Êtes vous certain ?</h4>
      </div>
      <div class="modal-body">
        Êtes vous certain de vouloir effacer cet élément ?
      </div>
      <div class="modal-footer">
        <%= link_to 'Effacer',  @supplier,  method: :delete, class: 'btn btn-danger' %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <%= render 'form', action: :show %>
    <a href="<%= edit_supplier_path %>" class="btn btn-primary">
      <span class="glyphicon glyphicon-edit" aria-hidden="true"> </span>
      Editer
    </a>
    <button class="btn-danger" data-toggle="modal" data-target="#delete">
      <span class="glyphicon glyphicon-remove" aria-hidden="true"> </span>
      Supprimer
    </button>
  </div>
</div>

  
<div class="panel panel-default">
  <div class="panel-heading">
    Articles correspondants
  </div>
  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th><%= t('name').titleize %></th>
          <th><%= 'Ref. Article' %></th>
          <th><%= 'Ref. Fournisseur' %></th>
          <th><%= 'Prix' %></th>
          <th><%= t('description').titleize %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |ac| %>
          <% as = ac.articles_suppliers.first %>
          <tr>
            <td><%= ac.name %></td>
            <td><%= ac.reference %></td>
            <td><%= as.supplier_reference %></td>
            <td><%= as.price %></td>
            <td><%= truncate(ac.description) %></td>
            <td class="text-right">
              <%= link_to(raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'), ac) %>
              |
              <%= link_to(raw('<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>'), edit_article_path(ac) ) %>
              |
              <%= link_to(raw('<span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>'),ac,
                method: :delete, data: { confirm: 'Êtes vous certain ?' }
              ) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>