<% provide(:title, t('House Module')) %>
<% provide(:subtitle, 'Création') %>

<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_form_for(@house_module, wrapper: :horizontal_form) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="col-md-3">
          <img src="<%= image_url('wall_module') %>" class="img-responsive" alt="">
        </div>

        <div class="col-md-8 form-horizontal">
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.association :module_range, label: 'Gamme' %>
            <%= f.input :default, as: :select, label: 'Module par defaut' %>
            <%= f.association :drawing, label: 'Coupe de principe' %>
          </div>
        </div>
        <div class="col-md-2"></div>
      </div>

      <div class="row">
        <div class="col-md-8 col-md-offset-3">
          <h3>Associer des articles :</h3>
          <div class="form-horizontal">
            <div class="form-inputs">
              <div id="articles-container"></div>
            </div>
          </div>
          <a href="#"
             class="btn btn-primary pull-right"
             id="add-article-btn">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </a>
          <a href="#"
             class="btn btn-danger pull-right"
             id="rm-article-btn">
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
          </a>
        </div>
      </div>

      <%= f.input :article_ids, as: :hidden %>

      <div class="form-actions">
        <%= f.submit 'Créer' %>
        <%= link_to('Retour', articles_path, class: 'btn btn-default pull-right') %>
      </div>


  <% end %>
  </div>
</div>




<script>
    var position = 0;
    var values = [];

    function updateHidden() {
        $('#house_module_article_ids').val(values);
    }

    function addElt() {
        var $select = $(this);
        var value = $select.val();
        var index = $select.parent().parent().index();
        console.log('value: '+value+', index :'+index);
        values[index]=value;
        updateHidden();
    }

    function displaySelect(position) {
        return '<div class="form-group article-select">' +
            '           <label class="col-sm-3 control-label" for="article_select_'+position+'">Article n°'+position+'</label>' +
            '             <div class="col-sm-9">' +
            '               <select class="form-control" name="article_select_'+position+'" id="article_select_'+position+'">' +
            '                 <option disabled selected value> -- choisir un article -- </option>' +
                              <% Article.all.each do |a| %>
            '                   <option value="<%= a.id %>"><%= a.name %></option>' +
                              <% end %>
            '               </select>' +
            '             </div>' +
            '           </div>';
    }

  var $selectContainer = $('#articles-container');
  $('#add-article-btn').on('click', function(e) {
     e.preventDefault();
     position++;
     $selectContainer.append(displaySelect(position));
     $selectContainer.find('.article-select').last().find('select').on('change', addElt);
  });
  $('#rm-article-btn').on('click', function(e) {
      e.preventDefault();
      position--;
      $selectContainer.find('.article-select').last().remove();
      values.pop();
      updateHidden();
  });

</script>