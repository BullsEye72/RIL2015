<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Derniers articles</h2>
  </div>
  
  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th><%= t('name').titleize %></th>
          <th><%= 'Reference' %></th>
          <th><%= 'Fournisseur' %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @last_articles.each do |article| %>
          <tr>
              <td><%= article.name %></td>
              <td><%= article.reference %></td>
              <td><%= show_or_count_supplier_in_article(article.id) %></td>
              <td class="text-right">
              <%= link_to(
                raw('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'),
                article
              ) %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>